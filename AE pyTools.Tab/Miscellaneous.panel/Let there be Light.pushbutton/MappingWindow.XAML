<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Lighting Fixture Mapping" Height="800" Width="1200">
  <!-- Outer ScrollViewer wrapping the entire content -->
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="10">
      <Label x:Name="HeaderLabel" Content="Match each CAD Fixture to a Revit Family and Type" Margin="10" />
      
      <!-- Mapping rows are added to this StackPanel -->
      <StackPanel x:Name="MappingStackPanel" />
      
      <Label Content="Coordinate Divisor (XYZ values will be divided by this):"/>
      <TextBox x:Name="DivisorTextBox" Text="12" Width="400"/>
      <StackPanel Orientation="Horizontal" Margin="10">
        <Button x:Name="OkButton" Content="OK" Width="75" Margin="5"/>
        <Button x:Name="CancelButton" Content="Cancel" Width="75" Margin="5"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</Window>
